.top__pickup__img
  background-size cover
  background-position center
  background-repeat repeat
  display block
  width 100%
  height 100%
  .top__pickup__ttl
    color #fff
.top__pickup__ttlArea
  background linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.6))
  display inline-block
  position relative
  height 100%
  width 100%
.top__pickup__ttl
  display inline
  font-size 2rem
  font-weight bold
  line-height 1.6
  padding 20px
  position absolute
  bottom 0
  left 0
.top__pickup__ttl__pr
  border 1px solid #fff
  display inline-block
  font-size 1.4rem
  font-weight normal
  line-height 1
  margin 0 0 0 10px
  padding 2px 5px
  vertical-align 3px
.main__contents__ttl
  border-bottom 1px c-medium solid
  font-size 1.8rem
  font-weight bold
  padding 0 0 10px 0
.main__contents__ttl--top
  height 30px
.main__contents__articleList
  margin 0 0 40px
.main__articleList__ad
  list-style: none
  & .c-sponsorTxt
    margin-top 40px
  & > ins
    margin-top 6px
.main__articleList__item
  border-bottom 1px dashed c-light
  padding 20px 0
  position relative
.articleList__ttl
  font-size 1.8rem
  font-weight bold
  position absolute
  top 20px
  left 206px
  line-height 1.6
.articleList__img
  background-size cover
  background-position center
  background-repeat repeat
  display inline-block
  height 120px
  width 186px
  margin 0 20px 0 0
.articleList__cat
.articleList__cat&:visited
  background-color c-key
  color #fff
  font-size 1.1rem
  float left
  height 22px
  padding 5px 10px
  position relative
  &:after
    content ''
    border-style solid
    border-color transparent
    border-width 22px 14px 0 0
    border-top-color c-key
    position absolute
    right -14px
    top 0
.articleList__txtArea
  a
    color c-txt
    &:link,&:visited,&:active
      color c-txt
    &:hover
      h3
        text-decoration underline
.articleList__txt
  color c-medium
  font-size 1.2rem
  line-height: 1.4
  position absolute
  left 206px
.articleList__txt__excerpt
  bottom 50px
.articleList__txt__meta
  display: flex
  bottom 20px
  span
    margin 0 10px 0 0
.articleList__txt__meta__pr
  font-size 1.1rem
  background c-medium
  color #fff
  padding 2px
.txt--noArticle
  font-size 1.6rem
  margin 20px 0 40px
.footer__pageTop
  padding 0 0 20px
  a
    background c-key
    border-radius 24px
    color #fff
    display inline-block
    font-size 24px
    padding 10px

+below(w-tab)
  .top__pickup
    li
      height 240px
      width 100%
      &:nth-child(2)
      &:nth-child(3)
        display none
      h3
        font-size 1.6rem
  .main__contents__ttl--top
    height auto
  .articleList__ttl
  .articleList__txt
    left 90px
  .articleList__ttl
    font-size 1.3rem
    line-height 1.4
  .articleList__img
    height 80px
    width 80px
  .articleList__txt
    font-size 1.1rem
  .articleList__txt__meta
    line-height 1.4
    .item--sp
      display inline

// 目的別で探す
.purpose__contaniner
  padding: 40px 0 40px
  width: 90%
  margin: auto
  +mq()
    width: 100%
    padding: 60px 0 60px

.purpose__title
  text-align: center
.purpose__underline
  width: 100px
  height: 1px
  background-color: #999999
  margin: auto

.purpose__txt
  text-align: center
  line-height: 2
.purpose__ul
  +mq()
    display: flex
    flex-wrap: wrap
    justify-content: center
    max-width: 1024px
    margin: auto
.purpose__li
  margin-bottom: 5px
  &:last-child
    margin-bottom: 0
  +mq()
    max-width: 250px
    width: calc(100% / 4 - 10px)
    margin-right: 5px
    margin-left: 5px
    margin-bottom: 10px
    &:last-child
      margin-bottom: 30px

.purpose__box
  display: flex
  justify-content: space-around
  align-items: center
  height: 80px
  padding: 0 5px
  background-color: #eaf5fa
  color: #339cd1
  fill: #339cd1


.purpose__box__img
  display: flex
  justify-content: center
  align-items: center
  height: 50px
  width: 50px
  border-radius: 50px
  background-color: #ffffff

.purpose__box__txt
  display: flex
  align-items: baseline
  color: #339cd1
  width: 230px
  letter-spacing: 0.45px
  +mq()
    flex-direction: column
    width: auto
    line-height: 1.2
    letter-spacing: 2px
  +mq-s()
    width: 205px

.purpose__box__txt--secondary
  color: #333333

.purpose__more
  display: flex
  justify-content: center
  align-items: center
  color: #339cd1
  fill: #339cd1
  cursor: pointer
  margin-bottom: 25px
  +mq()
    display: none
    margin-bottom: 0
.purpose__btn
  margin: auto
  display: flex
  justify-content: center
  align-items: center
  max-width: 345px
  width: 100%
  height: 50px
  border-radius: 25px
  box-shadow: 0px 2px 4px 0 rgba(0, 0, 0, 0.15)
  background-color: #339cd1

.purpose__btn__txt
  color: #ffffff
  letter-spacing: 1px

.purpose__box__arrow
  transform:rotate(-90deg)
  width: 20px

.item--sp-s
  display: none
  +mq-s()
    display: block

// システムPICKUP
.systems__contaniner
  margin: 0 -20px
  padding: 40px 0 25px
  background-color: #f3f3f3
  +mq()
    padding: 60px 0 60px
  +mq-pc-l()
    margin: 0
.systems__content
  width: 100%
  padding: 20px
  margin: auto
.systems__ul
  display: flex
  flex-wrap: wrap
  justify-content: space-between
  // max-width: 470px
  margin: auto
  +mq()
    flex-wrap: nowrap
    justify-content: space-around
    max-width: w-pc
    margin: auto

.systems__li
  width: calc(50% - 5px)
  border-radius: 2.5px
  box-shadow: 0px 2px 4px 0 rgba(0, 0, 0, 0.1)
  background-color: #ffffff
  margin-bottom: 10px
  +mq()
    max-width: 165px
    width: calc(100% / 4 - 40px)
  &:last-child
    margin-left: auto
  +mq-s()
    width: 45%
    height 230px
  a
    display: block

.systems__li--empty
  width: 165px
  +mq-s()
    width: 45%
    height 230px
  +mq()
    display: none

.systems__box
  padding: 10px
.systems__box__imgWrap
  // padding: 10px 0

.systems__box__imgWrap__img
  width: 100%
  height: 80px
  background-size: contain
  background-position: 50% 50%
  background-repeat: no-repeat

.systems__box__ttl
  color: #666666
.systems__box__txt
  line-height: 1.2
  font-weight: bold
  color: #339cd1
  overflow: hidden
  display: -webkit-box
  -webkit-box-orient: vertical
  word-break: break-all
  -webkit-line-clamp: 2
  line-clamp: 2
  box-orient: vertical
  word-wrap: break-word

.systems__box__cost
  color: #333333
  display: flex
  justify-content: center
  align-items: center
  line-height: 1.4
  +mq-pc-l()
    justify-content: space-around
.systems__box__cost__num
  color: #339cd1

// 固定追従バナー
.fixed_banner
  width: 100%
  height: 80px
  display: flex
  justify-content: center
  z-index: 0
  +mq-pc-l()
    display: none

.fixed_banner__item
  width: 33.3%
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  text-align: center
  &--primary
    @extend.fixed_banner__item
    background-color: #ff8b00
    border-radius: 10px 0 0 0
    color: #ffffff
    fill: #ffffff
    &:visited
      color: #ffffff
  &--secondary
    @extend.fixed_banner__item
    background-color: #3a9dcf
    color: #ffffff
    fill: #ffffff
    &:visited
      color: #ffffff
  &--tertiary
    @extend.fixed_banner__item
    background-color: #d8ebf5
    border-radius: 0 10px 0 0
    color: #3a9dcf
    fill: #3a9dcf
    &:visited
      color: #3a9dcf

.fixed_banner__item__icon
  display: flex
  justify-content: space-around
  align-items: center
  width: 100%

.fixed_banner__item__icon--empty
  width: 20px
.fixed_banner__item__icon--arrow
  transform: rotate(-90deg)
.fixed_banner__item__txt
  font-size: 1.3rem
  line-height: 1.23
