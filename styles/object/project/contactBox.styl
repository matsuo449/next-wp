.contactBox
  margin 30px 0 20px 0
  background-color c-compare-07
  border-radius 5px
  padding 5px
  +below(w-tab)
    margin 20px 0
.contactBox dl
  background-color c-compare-08
  border 1px solid c-compare-09
  border-radius 5px
  margin 0!important
  padding 30px
.contactBox__ttl
  font-weight bold
  font-size 1.8rem!important
  text-align center
  position relative
  background transparent!important
  padding 0 0 15px!important
  line-height 1.4
  &:after
    position absolute
    bottom 0
    left 0
    content ''
    width 100%
    height 0
    border-top 1px solid c-compare-09
    border-bottom 1px solid c-white
.contactBox__telArea
  margin 20px 0
  font-weight bold
  padding 0!important
  display flex
  justify-content center
.contactBox__telArea__num
  font-size 3.0rem
  //line-height 1
  padding-right 30px
  border-right 1px solid c-compare-09
  vertical-align middle
._telArea__num__inner
  display flex
  justify-content center
  align-items center
  &:before
    flex 0 1 auto
    display inline-block
    content "\e901"
    margin-right 5px
    color c-key
    font-family icomoon
.header--lp ._telArea__num__inner
  +below(w-pc)
    font-size 1rem
    width 44px
    height 44px
    display flex
    flex-wrap wrap
    align-items center
    padding 5px
    background #ffffff
    border 1px solid #009cce
  &:before
    +below(w-pc)
      font-size 1.3rem
.contactBox__telArea__supplement
  font-size 1.4rem
  line-height 1.5
  padding-left 30px
  border-left 1px solid c-white
.contactBox__btn
  font-size 1.8rem!important
  position relative
  font-weight bold
  // margin-left 40px
  display flex
  align-items center
  justify-content center
  vertical-align middle
  padding 0!important
  &.mb
    margin-bottom 20px
    +below(w-tab)
      margin-bottom 15px
.contactBox__btn a
  min-width 350px
  color c-white
  line-height 1
  padding 15px 30px
  border c-white solid 3px
  background-color c-orange
  border-radius 30px
  box-shadow 0 5px 12px 0 rgba(0,0,0,0.18)
.contactBox__btn__inner
  display flex
  justify-content center
  align-items center
  &:before
    flex 0 1 auto
    font-family icomoon
    display inline-block
    content "\e900"
    margin-right 10px
    color c-white
    font-size 2.4rem

+below(w-tab)
  .contactBox dl
    padding 25px
  .contactBox__telArea
    flex-direction column
  .contactBox__telArea__num
    border none
    font-size 1.8rem!important
    position relative
    font-weight bold
    vertical-align middle
    padding 0!important
    margin-bottom 2rem
  ._telArea__num__inner
    line-height 1
    &:before
      font-size 2.4rem
  .contactBox__telArea__num a
    font-size 2.25rem
    color c-txt
    padding 15px 42px
    border c-compare-08 solid 3px
    background-color c-white
    border-radius 30px
    box-shadow:0 5px 12px 0 rgba(0,0,0,0.18)
    display flex
    justify-content center
    align-items center
  .contactBox__telArea__supplement
    padding-left 0
    border none
    text-align center
  .contactBox__btn
    margin-left 0
  .contactBox__btn a
    font-size 1.8rem
    padding 15px
    max-width 100%
    min-width 100%
    width 100%

+below(w-sp)
  .contactBox__telArea__num a
    padding 15px 24px
