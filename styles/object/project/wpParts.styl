  text-align center
  vertical-align middle
  background c-x-light
span.page-numbers.current
  color #fff
  background-color c-key

//contactform7
.wpcf7
  input[type="text"]
  input[type="email"]
  input[type="tel"]
  input[type="url"]
  textarea
  select
    background-color #fff
    width 95%
    border 1px solid c-medium
    font-size 1.6rem
    padding 1.5rem
    border-radius 4px
  select
    height 33px
  input[type="button"]
  input[type="submit"]
    background c-link
    border none
    border-radius 4px
    box-shadow 0 4px 0 c-link-dark
    color #fff
    cursor pointer
    display inline-block
    font-size 1.6rem
    font-weight bold
    padding 1.25em 3em
    text-decoration none
    line-height 0
    transition all 0.3s
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    -webkit-appearance none
    &:hover
      opacity 0.8
      transition all 0.3s
  input[type="button"]
    background c-medium
    box-shadow 0 4px 0 c-dark
span.wpcf7-list-item
  display inline-block
  font-size 1.6rem
  margin-left 0 !important
  // margin-right 1em
  // margin-bottom 1em
