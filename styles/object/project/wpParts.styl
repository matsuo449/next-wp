//toc
.main__contents__article
  #toc_container
    background-color c-xx-light
    border none
    margin 0 0 40px
    padding 10px
    width 100%
    +mq()
      padding 30px
    .toc_title
      border-bottom 1px solid c-medium
      font-size 1.6rem
      text-align left
      margin 0 0 10px
    li
      font-size 1.6rem
      line-height 1.4
      margin 0 0 10px
      +mq()
        font-size 1.4rem
      &:last-child
        margin 0
      ul
        margin-top 5px
    a
      display inline
      margin-bottom: 0
      line-height: 1.6
  #toc_container.no_bullets
