// 記事吹き出し
$config-contentsBalloon
  display flex
  margin-bottom 30px
  //justify-content flex-start

$config-contentsBalloon__img
  overflow hidden
  border-width 2px
  border-style solid
  border-radius 50%
  flex 0 0 70px
  width 70px
  height 70px
  position relative
  +below(w-tab)
    flex 0 0 55px
    width 55px
    height 55px
  & > img
    width auto
    max-width none !important
    height 100% !important
    position absolute
    top -50%
    right -50%
    bottom: -50%
    left -50%
    margin auto

$config-contentsBalloon__txt
  flex 0 1 auto
  padding 20px
  position relative
  border-radius 5px
  word-break break-all
  & > p
    margin 0 !important
  &:before
    content ''
    display block
    border-width 13px 15px 13px 0
    border-style solid
    position absolute
    top 20px
  +below(w-tab)
    &:before
      border-width 6px 7.5px 6px 0

.balloon--primary
  @extend $config-contentsBalloon
  &__img
    @extends $config-contentsBalloon__img
    border-color #f3c921
  &__txt
    @extend $config-contentsBalloon__txt
    background-color #fff7d9
    margin-left 35px
    &:before
      border-color transparent #fff7d9 transparent transparent
      left -15px
    +below(w-tab)
      margin-left 18px
      &:before
        left -7.5px

.balloon--secondary
  @extend $config-contentsBalloon
  flex-direction row-reverse
  &__img
    @extends $config-contentsBalloon__img
    border-color #339cd1
  &__txt
    @extend $config-contentsBalloon__txt
    background-color #def3fd
    margin-right 35px
    &:before
      border-color transparent #def3fd transparent transparent
      transform rotate(180deg)
      right -15px
    +below(w-tab)
      margin-right 18px
      &:before
        right -7.5px
.toc_list > li > ul > li > a
  &:before
    content "・"
    color black
    font-weight bold
