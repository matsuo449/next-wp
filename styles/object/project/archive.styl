.archive__ttlArea
  border-bottom 1px c-medium solid
  padding 0 0 20px 0
.archive__ttl
  font-size 2.4rem
  font-weight bold
  line-height 1.3
.archive__meta
  font-size 1.4rem
  line-height 1.4
  display block
  padding 20px 0 0
.main__contents__subCategory
  border-bottom 1px c-light dashed
  padding 30px 0 10px
.main__contents__subCategory_ttl
  font-weight bold
  margin 0 0 20px
.list--category__item
  display inline-block
  a,a&:visited
    background c-x-light
    border-radius 4px
    color c-txt
    display block
    padding 8px
    margin 0 20px 20px 0
    span
      &:before
        color c-light
        font-size 1.2rem
        padding 0 0.25em 0 0
