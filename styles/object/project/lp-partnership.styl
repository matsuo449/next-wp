@import url(http://fonts.googleapis.com/earlyaccess/notosansjp.css)

// ====================================

// PC

// ====================================

.lp__sp--min
	display none
.lp__sp
	display none
.lp__pc
	display inline-table

//header ==============================

.lp__header
	font-family 'Noto Sans JP', sans-serif
	width 100%
	text-align center
	position fixed
	height 110px
	z-index 99
	box-shadow 0 10px 10px -3px rgba(0,0,0,0.2)
.lp__header__logo
	background #ffffff
	text-align center
	margin auto
	a
		display inline-block
		width 120px
		padding 10px 0 10px 0
.lp__header__nav
	background $blue
.lp__header__nav__list
	width $contentWhidth
	margin auto
.lp__header__nav__list__item
	display inline-block
	border-left 1px solid #ffffff
	&:last-child
		border-right 1px solid #ffffff
	a
		color #ffffff
		display inline-block
		font-size 14px
		width 250px
		padding 20px 0
		font-weight bold
		&:after
			content url(../img/lp-partnership/arrow.png)
			padding-left 10px

//MV ==============================

.lp__mv
	background url(../img/lp-partnership/mv.png) center 0 no-repeat
	width 100%
	text-align center
.lp__mv__contents
	width $contentWhidth
	margin auto
	height 520px
	position relative
.lp__mv__contents__box
	background rgba(255,255,255,0.9)
	box-shadow 10px 0 10px -3px rgba(0,0,0,0.2), -10px 0px 10px -3px rgba(0,0,0,0.2)
	width 540px
	padding-bottom 40px
	border-radius 20px 20px 0 0
	position absolute
	bottom -1px
.lp__mv__contents__box__txt
	padding 24px 0
	font-weight bold
	text-align center
	background $blue
	color #ffffff
	border-radius 20px 20px 0 0
	font-size 22px
	margin-bottom 30px
.lp__mv__contents__box__ttl
	padding 0 40px
	h1
		margin-bottom 30px

//ページ全体 ==============================
.lp__content
	position relative
	padding-top 110px
	color $font-color
	line-height 1.4
	a
		text-decoration none
	.content__inner
		width 100% !important
		margin auto
	textarea(placeholder)
		color #999999

.lp__contact__form__return
	color $font-color
.lp__conversion__btn
	display inline-block
	width 100%
	cursor pointer
	max-width 480px
	padding 20px 0
	color #ffffff !important
	font-size 24px
	font-weight bold
	border none
	border-radius 60px
	line-height: 1
	box-shadow: none
.lp__conversion__btn__submit
	background #ff8a00
	color #ffffff
	display inline-block
.lp__conversion__btn__return
	background #999999
	color #ffffff
	display inline-block
.lp__conversion__btn__ml10
	margin-left 10px
.lp__conversion__btn__mr10
	margin-right 10px

.lp__txtYellow
	color $yellow
.lp__content__ttl
	margin-bottom 90px
	h2
		font-size 44px
		font-weight bold
		position relative
		display inline-block
		&:before
			content ''
			position absolute
			bottom -30px
			display inline-block
			width 60px
			height 5px
			left 50%
			-webkit-transform translateX(-50%)
			transform translateX(-50%)
			background-color $blue
			border-radius 6px
.lp__h__read__txt
	margin-top 60px
	font-size 16px
.lp__radiusTopL
	border-radius 5px 0 0 0
.lp__radiusTopR
	border-radius 0 5px 0 0
.lp__radiusDownR
	border-radius 0 0 5px 0
.lp__radiusDownL
	border-radius 0 0 0 5px

.lp__underLine
	background linear-gradient(transparent 70%, $yellow 70%)

.lp__content__block__white
.lp__content__block__noPadding
	width 100%
	background #ffffff
	text-align center
	padding 120px 0

.lp__content__block__gray
	width 100%
	background $gray
	text-align center
	padding 120px 0
.lp__content__block__blue
	width 100%
	background #e8f6f8
	text-align center
//コンテンツ詳細（サービス） ==================

.lp__content__service__list
