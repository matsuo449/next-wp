.about__content__inner
  width 100%
  overflow hidden
  margin 20px auto 100px
.about__kv
  background url(../img/about/kv-bg_pc.jpg) 0 0 no-repeat
  max-width 1040px
  height 428px
  background-size contain
  background-position center center
  padding-top 100px
  text-align left
  display flex
  flex-direction column
  justify-content center
  margin 0 auto
.about__kv__ttl
  display flex
  justify-content center
.about__kv__ttl__sub
  font-size 1.8rem
  line-height 1.5
  margin-top 30px
  text-shadow 3px  3px 8px #ffffff,-3px  3px 8px #ffffff,3px -3px 8px #ffffff,-3px -3px 8px #ffffff
  font-weight bold
  text-align center
  padding-bottom 40px
.about__kv__ttl__sub--blue
  color #349cd1
.about__ttl__before
  background url(../img/about/about-h1-before.png) 0 0 no-repeat
  background-size contain
  width 300px
  height 12px
  margin 0 auto
.about__feature
  background url(../img/about/about-co01-bg.png) 0 0 no-repeat
  background-size contain
  max-width 800px
  height 300px
  margin 60px auto
  text-align center
.about__feature__ttl
  text-align center
  font-size 2rem
  font-weight bold
  margin 20px auto 60px auto
.about__feature__ttl__sub
  text-align center
  margin 5px auto
  display inline-block
  font-size 1.8rem
  font-weight bold
  line-height 1.5
  background linear-gradient(transparent 70%, #f3c81f 50%)
.about__feature__txt
  margin 30px auto
  line-height 1.8

.about__description
  padding 100px 0 70px
  text-align center
  position relative
  margin 0 auto
  background-color #fcfaf0
  border-radius 0 0 100% 100% / 0 0 60px 60px
.about__description:before
  position absolute
  top 0
  left 0
  display block
  width 100%
  height 60px
  content ''
  border-radius 0 0 100% 100%
  background-color #ffffff
.about__description__ttl
  text-align center
  font-size 2rem
  font-weight bold
  margin 20px auto 60px auto

.about__description__point__item
  display flex
  width 950px
  margin 60px auto
.about__description__point__item__box
  flex 0 1 60%
  position relative
  padding 60px 0
  height 350px
.about__description__point__item__box__point__img
  position absolute
  width 80px
  top -10px
  left 40px
.about__description__point__item__ttl
  font-size 1.8rem
  line-height 1.6
  font-weight bold
  margin-bottom 20px
.about__description__point__item__box__ttl--blue
  color #349cd1
.about__description__point__item__box__txt
  line-height 1.4
.about__description__point__item__box__btn
  font-size 1.8rem
  position relative
  font-weight bold
  display flex
  align-items center
  justify-content center
  vertical-align middle
.about__description__point__item__box__btn a
  background linear-gradient(90deg, #f3c821, #ffb6a5)
  border-radius 30px
  box-shadow:0 5px 12px 0 rgba(0,0,0,0.18)
  margin 20px
.about__description__point__item__box__btn use
  width 25px
  fill #fff
.about__description__point__item__box__btn__inner
  display flex
  align-items center
  justify-content center
  color #fff
  padding 8px 40px 8px
  border #fff solid 1px
  background linear-gradient(90deg, #f3c821, #ffb6a5)
  border-radius 30px
  margin 3px
.about__description__point1__item
  justify-content flex-end
  background url(../img/about/about-co02-photo01_pc.png) 0 0 no-repeat
  background-size auto 300px
  background-position left center
.about__description__point1__item__box
  background url(../img/about/about-co02-circle01_pc.png) 0 0 no-repeat
  background-size contain
  background-position center center
.about__description__point2__item
  background url(../img/about/about-co02-photo02_pc.png) 0 0 no-repeat
  background-size auto 300px
  background-position right center
.about__description__point2__item__box
  background url(../img/about/about-co02-circle02_pc.png) 0 0 no-repeat
  background-size contain
  background-position center center
.about__description__point3__item
  justify-content flex-end
  background url(../img/about/about-co02-photo03_pc.png) 0 0 no-repeat
  background-size auto 300px
  background-position left center
.about__description__point3__item__box
  background url(../img/about/about-co02-circle01_pc.png) 0 0 no-repeat
  background-size contain
  background-position center center

.about__contact
  margin-top 60px
.about__contact__ttl
  text-align center
  font-size 2rem
  font-weight bold
  margin 20px auto 60px auto
.about__contact__box
  margin 0 auto
.about__contact__box__txt
  text-align center
  font-size 1.6rem
.about__contact__box__column
  margin 0 auto
  width 800px
  display flex
  justify-content center
.about__contact__box__column__tel
  flex 0 1 40%
  display flex
  flex-direction column
  justify-content center
.about__contact__box__column__tel__number
  font-size 3.4rem
  font-weight bold
  text-align center
.about__contact__box__column__tel__number svg
  fill #349cd1
.about__contact__box__column__tel__effective__time
  text-align center
  margin-top 5px
  padding-left 40px
.about__contact__box__column__btn
  flex 0 1 60%
  font-size 1.8rem
  position relative
  font-weight bold
  display flex
  align-items center
  justify-content center
  vertical-align middle
.about__contact__box__column__btn a
  background linear-gradient(90deg, #f3c821, #ffb6a5)
  border-radius 30px
  box-shadow:0 5px 12px 0 rgba(0,0,0,0.18)
  margin 20px
.about__contact__box__column__btn use
  width 25px
  fill #fff
.about__contact__box__column__btn__inner
  display flex
  align-items center
  justify-content center
  color #fff
  padding 8px 40px 8px
  border #fff solid 1px
  background linear-gradient(90deg, #f3c821, #ffb6a5)
  border-radius 30px
  margin 3px

