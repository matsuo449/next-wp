//tag
.list--tag__item
  display inline-block
  margin 0 20px 20px 0
  line-height 1.5
  a
    color c-txt
    &:link,&:visited,&:active
      color c-txt
    &:hover
      span
        text-decoration underline
.c-ico--tag
  &:before
    color c-light
    font-size 1.3rem
    margin 0 0.25em 0 0
aside
  .list--tag
    border-bottom 1px c-light dashed
