.checkMark__primary #disabledCheck input[type=checkbox]
  cursor not-allowed
  background #f3f3f3
.checkMark__primary
  label
    &:hover
      cursor pointer
  input[type=checkbox]
    position: relative
    right: 0
    bottom: 0
    left: 0
    width: 30px
    height: 30px
    margin-right: 0.5rem
    cursor: pointer
    transition: all 0.15s ease-out 0s
    color: #ffffff
    border: none
    outline: none
    border-radius 5px
    background: #f3f3f3
    appearance: none
    display: inline-block;
    vertical-align: middle;
  input[type=checkbox]
    &:checked
      background #339cd1
      &::before
        content: "";
        display: block
        position: absolute
        top: 40%
        transform: translateY(-40%) rotate(47deg)
        left: 10px;
        width: 7px;
        height: 14px;
        border-bottom: 3px solid #fff;
        border-right: 3px solid #fff;
    &:disabled
      cursor not-allowed
      background #f3f3f3
  .wpcf7-list-item
    +below(w-pc)
      width 100%
  .wpcf7-list-item-label
    margin-left 10px
    display inline-block
    vertical-align middle
    line-height 1.5
