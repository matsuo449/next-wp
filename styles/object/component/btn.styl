//btn
.c-btn,
.c-btn:&visited
  background c-medium
  box-shadow 0 4px 0 c-dark
  color #fff
  border-radius 4px
  display inline-block
  font-size 1.6rem
  font-weight bold
  padding 1em 3em
  text-decoration none
  line-height 1.1
  +below(w-tab)
    line-height 1.4
.c-btn--blue,
.c-btn--blue:&visited
  background c-link
  box-shadow 0 4px 0 c-link-dark
  color #fff
.c-btn--concierge,
.c-btn--concierge:&visited
  background #f3c921
  border-radius 4px
  box-shadow 0 4px 0 rgba(222,183,31,1)
  display block
  text-align center
  padding 1em 2em
.c-btn--advertorial,
.c-btn--advertorial:&visited
  +below(w-tab)
    display block
.c-btn--eventEntry,
.c-btn--eventEntry:&visited
  background #f3c921
  box-shadow 0 4px 0 rgba(222,183,31,1)
  color c-brown
  display inline-block
  font-size 2.4rem
  padding 16px
  text-align center
  +below(w-tab)
    font-size 1.6rem
    padding 16px 5px
  +below(w-sp-xs)
    font-size 1.4rem
.c-btn--eventEntry__inner
  display inline-block
  line-height 1
  max-height 24px
  padding 0 48px 0 0
  position relative
  +below(w-tab)
    padding 0 24px 0 0
  +below(w-sp-xs)
    padding 0 18px 0 0
  &:before
    background c-brown
    border-radius 16px
    color white
    display inline-block
    font-size 1.6rem
    padding 7px
    position absolute
    right 0
    top -3px
    +below(w-tab)
      font-size 1.4rem
      padding 4px
      top -3px
    +below(w-sp-xs)
      font-size 1rem
      padding 4px
      top -3px
.c-btn--eventTel,
.c-btn--eventTel:&visited
  background c-key-light
  box-shadow 0 4px 0 rgba(155,179,191,1)
  color c-key
  display inline-block
  font-size 2.4rem
  padding 16px
  text-align center

.c-btn--eventZip
  border 1px solid #2b9bd3
  border-radius 5px
  padding 10px
  margin-left 20px
  background #fff
  color #2b9bd3
  font-size 1.4rem
  &:hover
    cursor pointer
  &:focus
    outline none
  +below(w-pc)
    width calc(100% - 60% + 10px)
.fixbanner__btn__wrap
  +below(w-sp)
    width calc(50% - 4px)
.c-btn--fixbanner
  &--red
    color #fff
    background #eb6877
    border-radius 30px
    padding 20px 10px
    border 2px solid #fff
    width 100%
    display block
    font-size 12px
    font-weight bold
    letter-spacing 0.96px
    margin-top 30px
    &:before
      margin-right 5px
      display inline-block
    &:visited
      color #ffffff
    +below(w-sp)
      border-radius 6.4px
      margin-top 0px
      padding 14px 0px
      font-size 1.5rem
  &--blue
    color #fff
    background #2b9bd3
    border-radius 30px
    padding 20px 10px
    border 2px solid #fff
    width 100%
    display block
    font-size 12px
    font-weight bold
    letter-spacing 0.96px
    margin-top 30px
    &:before
      margin-right 5px
      display inline-block
    &:visited
      color #ffffff
    +below(w-sp)
      border-radius 6.4px
      margin-top 0px
      padding 14px 0px
      font-size 1.5rem
.close
  position absolute
  background #000
  width 25px
  height 25px
  border-radius 50%
  outline none
  top -15px
  right -5px
  border none
  &:before
    content ''
    position absolute
    top 4px
    left 12px
    display block
    width 2px
    height 17px
    background #fff
    transform rotate(45deg)
  &:after
    content ''
    position absolute
    top 4px
    left 12px
    display block
    width 2px
    height 17px
    background #fff
    transform rotate(-45deg)
  &:hover
    cursor pointer
