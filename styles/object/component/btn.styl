.icon {
  position: relative;
  width: 10px;
  height: 10px;
  background: #fff;
  border-radius: 50%;
  margin-left 10px
}

.icon::before, .icon--plus::after {
  position: absolute;
  top: 4px;
  left: 50%;
  content: '';
  display: inline-block;
  width: 10px;
  height: 10px;
  border-top: 2px solid #339cd1;
  transform: translateX(-50%);
}

.icon--plus:after {
  top: -1px;
  left: -5px;
  transform: rotate(90deg);
}
.c-btn--arrow--r {
  position: absolute;
  right: 10px;
  top: 50%;
  transform: translateY(-50%);
}
