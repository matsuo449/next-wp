header
  background #fff
  width 100%
  z-index 100
  // border-bottom 1px solid c-light
  position: relative
  // +mq-pc-l()
  //   position absolute
header.header--lp
  height 90px
  border-bottom 1px solid #ddd
  transition .3s cubic-bezier(.4, 0, .2, 1)
  .navMenu--lp
    height 100%
    .navMenu__inner
      height 100%
header.header--lp + .content
  padding-top 0
  +mq-pc-l()
    padding-top 90px
.header__inner
  margin 0 auto
  position relative
  max-width w-pc
  width: 100%
  z-index: 1
.header__news
  padding 5px
  background #287FB2
.header__news__inner
  display flex
  flex-wrap nowrap
  align-items center
  max-width w-pc
  width: 100%
  margin 0 auto
  color #fff
  font-size 1.2rem
  overflow hidden
  +below(w-tab)
    width 100%
.header__news__inner__txt
  line-height 1em
  white-space nowrap
  &.is-active
    padding-left 100%
    line-height 1em
    animation scrollTxt 60s linear infinite
  a
    color #F4CF39
    font-weight bold

.navMenu__btn
  display flex
  justify-content center
  outline none
  border solid 3px #ffffff
  font-weight bold
  max-width 240px
  width 100%
  height 55px
  background #ff8a00
  color c-white
  padding 15px
  border-radius 27.5px
  box-shadow: 0px 4px 8px 0 rgba(0, 0, 0, 0.15)

.navMenu__btn--secondary
  display: none
  &:visited
    color #fff
  +mq()
    @extend .navMenu__btn
    display: flex
    position: absolute
    top: 15px
    right: 0px
.navMenu__btn--empty
  max-width 240px
  width 100%

@keyframes scrollTxt{
  0% { transform: translateX(0)}
  100% { transform: translateX(-100%)}
}
